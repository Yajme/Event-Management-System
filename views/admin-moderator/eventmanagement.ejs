                    <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Event Management</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Forms</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Form elements</li>
                </ol>
              </nav>
            </div>
            <div class="row">
              
              
              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Event Management</h4>
                    <p class="card-description"> Event Information</p>
                    <div class="col-lg-12 grid-margin stretch-card">
                      <div class="card">
                        <div class="card-body">
                          <h4 class="card-title">Event List</h4>
                          </p>
                            <table class="table table-striped table-bordered" id="elist">
                              <thead>
                                <tr>
                                  <th>Event ID</th>
                                  <th>Event Name</th>
                                  <th>Event Description</th>
                                  <th>Organization ID</th>
                                  <th>Status</th>
                                  <th style="text-align: center;">Action</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% if(event.length){ for(var i = 0; i< event.length; i++) { if(event[i].statusID != 2){%>
                                  <tr>
                                    <form action="/admin/update-event" method="post"> 
                                      <td><input class="inputID" type="text" id="eventID" name="eventID" value="<%= event[i].eventID%>" readonly></td>
                                      <td><%= event[i].eventName%></td>
                                      <td><%= event[i].eventDesc%></td>
                                      <td><%= event[i].org_ID%></td>
                                      <td><%= event[i].statusID%></td>
                                      <td><button type="submit" class="btn btn-primary" style="width: 100%;background-color: #25b800;" name="approve">Approve</button></td>
                                      <td><button type ="submit" class="btn btn-danger" style="width: 100%; background-color: rgb(252, 70, 70);" name="delete">Cancel</button></td>
                                    </form>
                                  </tr>
                                <% } } }else { %>
                                <tr>
                                  <td>No Data</td>
                                  <td>No Data</td>
                                  <td>No Data</td>
                                  <td>No Data</td>
                                  <td>No Data</td>
                                  <td><button class="btn btn-primary" style="width: 100%;">No Data</button></td>
                                  <td><button class="btn btn-danger" style="width: 100%;">No Data</button></td>
                                </tr>
                                <% }%>
                              </tbody>
                            </table>
                    </div>
                  </div>
                  </div>
                </div>
              </div>

              
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!--*********************************
            Footer start
